{% form 'customer_address', customer.new_address %}

  <h5>{{ 'customer.addresses.add_new' | t }}</h5>

  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <label for="AddressFirstNameNew" class="control-label">
          {{ 'customer.addresses.first_name' | t }}
        </label>

        <input type="text"
          name="address[first_name]"
          id="AddressFirstNameNew"
          class="form-control"
          value="{{ form.first_name }}"
          placeholder="{{ 'customer.addresses.first_name' | t }}"
          autocapitalize="words">
      </div>                      
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <label for="AddressLastNameNew" class="control-label">
          {{ 'customer.addresses.last_name' | t }}
        </label>

        <input type="text"
          name="address[last_name]"
          id="AddressLastNameNew"
          class="form-control"
          placeholder="{{ 'customer.addresses.last_name' | t }}"
          value="{{ form.last_name }}"
          autocapitalize="words">
      </div>                      
    </div>
  </div>

  <div class="form-group">
    <label for="AddressCompanyNew" class="control-label">
      {{ 'customer.addresses.company' | t }}
    </label>

    <input type="text"
      name="address[company]"
      id="AddressCompanyNew"
      class="form-control"
      placeholder="{{ 'customer.addresses.company' | t }}"
      value="{{ form.company }}"
      autocapitalize="words">
  </div>

  <div class="form-group">
    <label for="AddressAddress1New" class="control-label">
      {{ 'customer.addresses.address1' | t }}
    </label>

    <input type="text"
      name="address[address1]"
      id="AddressAddress1New"
      class="form-control"
      placeholder="{{ 'customer.addresses.address1' | t }}"
      value="{{ form.address1 }}"
      autocapitalize="words">
  </div>

  <div class="form-group">
    <label for="AddressAddress2New" class="control-label">
      {{ 'customer.addresses.address2' | t }}
    </label>
    <input type="text"
      name="address[address2]"
      id="AddressAddress2New"
      class="form-control"
      placeholder="{{ 'customer.addresses.address2' | t }}"
      value="{{ form.address2 }}"
      autocapitalize="words">
  </div>

  <div class="form-group">
    <label for="AddressCityNew" class="control-label">
      {{ 'customer.addresses.city' | t }}
    </label>
    <input type="text"
      name="address[city]"
      id="AddressCityNew"
      class="form-control"
      placeholder="{{ 'customer.addresses.city' | t }}"
      value="{{ form.city }}"
      autocapitalize="words">
  </div>

  <div class="row">
    <div class="col-md-4">

      <div class="form-group">
        <label for="AddressCountryNew" class="control-label">
          {{ 'customer.addresses.country' | t }}
        </label>
        <select
          name="address[country]"
          id="AddressCountryNew"
          class="form-control"
          data-default="{{ form.country }}">
          {{ country_option_tags }}
        </select>
      </div>

    </div>
    <div class="col-md-4">

      <div id="AddressProvinceContainerNew" class="form-group" style="display: none">
        <label for="AddressProvinceNew" class="control-label">
          {{ 'customer.addresses.province' | t }}
        </label>
        <select
          name="address[province]"
          id="AddressProvinceNew"
          class="form-control"
          data-default="{{ form.province }}">
        </select>
      </div>

    </div>
    <div class="col-md-4">

      <div class="form-group">
        <label for="AddressZipNew" class="control-label">
          {{ 'customer.addresses.zip' | t }}
        </label>
        <input type="text"
          name="address[zip]"
          id="AddressZipNew"
          class="form-control"
          placeholder="{{ 'customer.addresses.zip' | t }}"
          value="{{ form.zip }}"
          autocapitalize="characters">
      </div>
    </div>
  </div>

  <div class="form-group">
    <label for="AddressPhoneNew" class="control-label">
      {{ 'customer.addresses.phone' | t }}
    </label>
    <input type="tel"
      name="address[phone]"
      id="AddressPhoneNew"
      class="form-control"
      placeholder="{{ 'customer.addresses.phone' | t }}"
      value="{{ form.phone }}"
      pattern="[0-9\-]*">
  </div>                  

  <div class="form-group">
    <div class="checkbox">
      {{ form.set_as_default_checkbox }}

      <label for="address_default_address_new">
        {{ 'customer.addresses.set_default' | t }}
      </label>
      <span class="checkbox-ui"></span>
    </div>
  </div>

  <div class="form-group">
    <input type="submit" class="btn btn-primary" value="{{ 'customer.addresses.save' | t }}">
    <button type="button" class="btn btn-link" data-address-new-toggle>
      {{ 'customer.addresses.cancel' | t }}
    </button>
  </div>
{% endform %}