{%- comment %}

  Customer Edit Address Form
  ------------------------------------------------------------------------------

  Usage:

  {% include 'customer-edit-address-form',
              address: { Address } - required
  %}

{% endcomment -%}

{% form 'customer_address', address %}
  <h4>{{ 'customer.addresses.edit_address' | t }}</h4>

  <div class="form-group">
    <label for="AddressFirstName_{{ form.id }}" class="control-label">
      {{ 'customer.addresses.first_name' | t }}
    </label>
    <input type="text"
      name="address[first_name]"
      id="AddressFirstName_{{ form.id }}"
      placeholder="{{ 'customer.addresses.first_name' | t }}"
      class="form-control"
      value="{{ form.first_name }}"
      autocapitalize="words">
  </div>

  <div class="form-group">
    <label for="AddressLastName_{{ form.id }}" class="control-label">
      {{ 'customer.addresses.last_name' | t }}
    </label>

    <input type="text"
      name="address[last_name]"
      id="AddressLastName_{{ form.id }}"
      class="form-control"
      placeholder="{{ 'customer.addresses.last_name' | t }}"
      value="{{ form.last_name }}"
      autocapitalize="words">
  </div>

  <div class="form-group">
    <label for="AddressCompany_{{ form.id }}" class="control-label">
      {{ 'customer.addresses.company' | t }}
    </label>

    <input type="text"
      name="address[company]"
      id="AddressCompany_{{ form.id }}"
      class="form-control"
      placeholder="{{ 'customer.addresses.company' | t }}"
      value="{{ form.company }}"
      autocapitalize="words">
  </div>

  <div class="form-group collapse-sm">
    <label for="AddressAddress1_{{ form.id }}" class="control-label">
      {{ 'customer.addresses.address1' | t }}
    </label>

    <input type="text"
      name="address[address1]"
      id="AddressAddress1_{{ form.id }}"
      class="form-control"
      placeholder="{{ 'customer.addresses.address1' | t }}"
      value="{{ form.address1 }}"
      autocapitalize="words">
  </div>

  <div class="form-group collapse-sm">
    <label for="AddressAddress2_{{ form.id }}" class="control-label">
      {{ 'customer.addresses.address2' | t }}
    </label>
    
    <input type="text"
      name="address[address2]"
      id="AddressAddress2_{{ form.id }}"
      class="form-control"
      placeholder="{{ 'customer.addresses.address2' | t }}"
      value="{{ form.address2 }}"
      autocapitalize="words">
  </div>

  <div class="form-group">
    <label for="AddressCity_{{ form.id }}" class="control-label">
      {{ 'customer.addresses.city' | t }}
    </label>

    <input type="text"
      name="address[city]"
      id="AddressCity_{{ form.id }}"
      placeholder="{{ 'customer.addresses.city' | t }}"
      value="{{ form.city }}"
      class="form-control"
      autocapitalize="words">
  </div>

  <div class="row">

    <div class="col-md-4">
      <div class="form-group">
        <label for="AddressCountry_{{ form.id }}" class="control-label">
          {{ 'customer.addresses.country' | t }}
        </label>

        <select
          name="address[country]"
          id="AddressCountry_{{ form.id }}"
          class="form-control address-country-option"
          data-form-id="{{ form.id }}"
          data-default="{{ form.country }}">
          {{ country_option_tags }}
        </select>
      </div>
    </div>

    <div class="col-md-4">
      <div id="AddressProvinceContainer_{{ form.id }}" class="form-group" style="display: none">
        <label for="AddressProvince_{{ form.id }}" class="control-label">
          {{ 'customer.addresses.province' | t }}
        </label>

        <select
          name="address[province]"
          id="AddressProvince_{{ form.id }}"
          class="form-control"
          data-default="{{ form.province }}">
        </select>
      </div>
    </div>

    <div class="col-md-4">

      <div class="form-group">
        <label for="AddressZip_{{ form.id }}" class="control-label">
          {{ 'customer.addresses.zip' | t }}
        </label>

        <input type="text"
          name="address[zip]"
          id="AddressZip_{{ form.id }}"
          class="form-control"
          placeholder="{{ 'customer.addresses.zip' | t }}"
          value="{{ form.zip }}"
          autocapitalize="characters">
      </div>
    </div>
  </div>

  <div class="form-group">
    <label for="AddressPhone_{{ form.id }}" class="control-label">
      {{ 'customer.addresses.phone' | t }}
    </label>

    <input type="tel"
      name="address[phone]"
      id="AddressPhone_{{ form.id }}"
      class="form-control"
      placeholder="{{ 'customer.addresses.phone' | t }}"
      value="{{ form.phone }}"
      pattern="[0-9\-]*">
  </div>

  <div class="form-group">
   <div class="checkbox">
      {{ form.set_as_default_checkbox }}

      <label for="address_default_address_{{ form.id }}">
        {{ 'customer.addresses.set_default' | t }}
      </label>
      <span class="checkbox-ui"></span>
    </div>
  </div>

  <div class="form-group">
    <input type="submit" class="btn btn-primary" value="{{ 'customer.addresses.update' | t }}">
    <button type="button" class="btn btn-link" data-address-edit-toggle data-form-id="{{ form.id }}">
      {{ 'customer.addresses.cancel' | t }}
    </button>
  </div>  

{% endform %}