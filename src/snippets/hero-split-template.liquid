
<section class="Hero Hero--split Hero--hasOverlay flex-col u-pos-rel {% if hero_classnames != '' %}{{hero_classnames}}{% endif %}">
  <div class="Hero-background HeroBackground--left" {% if background_image_left %}style="background-image: url('{{ background_image_left }}');"{% endif %}></div>
  <div class="Hero-background HeroBackground--right" {% if background_image_right %}style="background-image: url('{{ background_image_right }}');"{% endif %}></div>
  <div class="Hero-background Hero-overlayBackground"></div>
  <div class="container flex-1 flex-col u-pos-rel">
    <div class="flex-1 flex-align-items-center flex-0">
      <div class="flex-0 u-pb-xs__0 u-pb__xxl">
        <h1 class="h1 Hero-h1 u-ta-center u-lh-md u-color-white {% if hero_has_cta %} u-mb__lg u-mb-lg__xxl{% endif %}">{{split_hero_title}}</h1>
        {% if hero_has_cta %}
        <div class="Hero-cta flex flex-col-medium-down">
          <div class="flex-1 flex">
            <div class="flex1 flex-justify-left u-mb-sm__sm u-mb-md__sm">
              <a href="{{button_left_url}}" class="Button Button--inverted">{{button_left_title}}</a>
            </div>
          </div>
          <div class="flex-1 flex">
            <div class="flex1 flex-justify-right">
              <a href="{{button_right_url}}" class="Button Button--inverted">{{button_right_title}}</a>
            </div>
          </div>
        </div>
        {% endif %}
      </div>
    </div>
  </div>
</section>
