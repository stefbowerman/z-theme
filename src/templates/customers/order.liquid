{%- comment %}
  Individual customer order

  Styles:
  - account.scss
  - page.scss
{% endcomment -%}

{% capture page_sidebar_html %}
  {% include 'page-sidebar' %}
{% endcapture %}

{% assign has_sidebar = false %}
{% if page_sidebar_html != blank %}
  {% assign has_sidebar = true %}
{% endif %}

<div class="layout-content-wrapper">
  <div class="container">
    <div class="row">

      <div class="page-header">
        <h1 class="page-header__title">Order Details</h1>
      </div>
      
      <div class="page-content{% if has_sidebar %} page-content--has-sidebar{% endif %}">

        <div class="customer-order" data-order="{{ order.id }}">

          <h5 class="customer-order__title clearfix">{{ 'customer.order.title' | t: name: order.name }} <span style="float: right">{{ order.created_at | time_tag: format: 'month_day_year' }}</span></h2>

          {% if order.cancelled %}
            <div class="customer-order__details--cancellation">
              <div class="row">
                <div class="col-sm-6">
                    {%- assign cancelled_at = order.cancelled_at | date: "%B %d, %Y %I:%M%p" -%}
                    <div class="alert alert-warning u-inline-block">
                      <p>{{ 'customer.order.cancelled' | t: date: cancelled_at }}</p>
                      <p>{{ 'customer.order.cancelled_reason' | t: reason: order.cancel_reason }}</p>
                    </div>
                </div>
              </div>
            </div>
          {% endif %}

          <div class="customer-order__addresses">
            <div class="row">
              <div class="col-sm-6 col-md-4">
                <div class="address--billing">
                  <h6>{{ 'customer.order.billing_address' | t }}</h6>
                  {{- order.billing_address | format_address -}}
                </div>
              </div>
              <div class="col-sm-6 col-md-4">
                <div class="address--shipping">
                  <h6>{{ 'customer.order.shipping_address' | t }}</h6>
                  {{- order.shipping_address | format_address -}}
                </div>
              </div>
              <div class="col-sm-12 col-md-4">
                <div class="customer-order__statuses">
                  <h6>{{ 'customer.orders.tracking_status' | t }}</h6>

                  <div class="customer-order__status">
                    <h6 class="order-status__title">{{ 'customer.order.payment_status' | t }}:</h6>
                    {{- order.financial_status_label -}}
                  </div>
                  <div class="customer-order__status">
                    <h6 class="order-status__title">{{ 'customer.order.fulfillment_status' | t }}:</h6>
                    {{- order.fulfillment_status_label -}}
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="customer-order__line-items">
            <h6>{{ 'customer.order.line_items_title' | t }}</h6>

            <!-- line-item -->
            {% for line_item in order.line_items %}
              <div class="customer-order__line-item" id="{{ line_item.key }}">
                <div class="row">
                  <div class="col-sm-3">
                    <div class="line-item__img">
                      {{ line_item.image | img_url: '250x' | img_tag | link_to: line_item.product.url }}
                    </div>
                  </div>
                  <div class="col-sm-6">
                    <h5 class="line-item__title">{{ line_item.product.title | link_to: line_item.product.url }}</h5>
                    {% comment %} Only show this line if there is non-default content {% endcomment %}
                    {% if line_item.variant.title != "Default Title" %}
                      <p class="line-item__variant-title">{{ line_item.variant.title  | link_to: line_item.variant.url }}</p>
                    {% endif %}
                    <p class="line-item__qty u-color-black">
                      <span class="u-tt-uppercase">{{ 'customer.order.line_item_quantity' | t }}</span>: {{ line_item.quantity }}

                      {% if line_item.quantity > 1 %}
                        ({{ line_item.quantity | times: line_item.price | money }} each)
                      {% endif %}
                    </p>

                    {% if line_item.fulfillment %}
                      <p class="line-item__fulfillment">
                        {%- assign created_at = line_item.fulfillment.created_at | date: format: 'month_day_year' -%}

                        {{ 'customer.order.fulfilled_at' | t: date: created_at }}

                        {% if line_item.fulfillment.tracking_number %}
                          <a href="{{ line_item.fulfillment.tracking_url }}">{{ line_item.fulfillment.tracking_company }} #{{ line_item.fulfillment.tracking_number}}</a>
                        {% endif %}
                      </p>
                    {% endif %}
                  </div>
                </div>
              </div>
            {% endfor %}
            <!-- END line-item -->

            <div class="customer-order__totals">
              <div class="row">
                <div class="col-sm-7 col-sm-offset-5 col-lg-5 col-lg-offset-7">
                  <div data-shopify-total-lines>
                    <div class="customer-order__subtotal  customer-order__subtotal--price">
                      <h5 class="subtotal__label">{{ 'customer.order.subtotal' | t }}</h5>
                      <h5 class="subtotal__value">{{ order.subtotal_price | money }}</h5>
                    </div>
                    {% for discount in order.discounts %}
                      <div class="customer-order__subtotal customer-order__subtotal--discount">
                        <h5 class="subtotal__label">{{ discount.code }} {{ 'customer.order.discount' | t }}</h5>
                        <h5 class="subtotal__value">{{ discount.savings | money }}</h5>
                      </div>
                    {% endfor %}
                    {% for shipping_method in order.shipping_methods %}
                      <div class="customer-order__subtotal customer-order__subtotal--shipping">
                        <h5 class="subtotal__label">{{ 'customer.order.shipping' | t }} ({{ shipping_method.title }})</h5>
                        <h5 class="subtotal__value">{{ shipping_method.price | money }}</h5>
                      </div>
                    {% endfor %}
                    {% for tax_line in order.tax_lines %}
                      <div class="customer-order__subtotal customer-order__subtotal--tax">
                        <h5 class="subtotal__label">{{ 'customer.order.tax' | t }} ({{ tax_line.title }} {{ tax_line.rate | times: 100 }}%)</h5>
                        <h5 class="subtotal__value">{{ tax_line.price | money }}</h5>
                      </div>
                    {% endfor %}
                  </div>

                  <div class="customer-order__total">
                    <h5 class="subtotal__label">{{ 'customer.order.total' | t }}</h5>
                    <h5 class="subtotal__value">
                      {{ order.total_price | money }} {{ order.currency }}
                    </h5>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="customer-order__post-script">
          <a href="/account" class="cta cta-3">{{ 'customer.account.return' | t }}</a>
        </div>
      </div>

      {{ page_sidebar_html }}

    </div>
  </div>
</div>
