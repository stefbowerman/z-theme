<div data-section-id="{{ section.id }}" data-section-type="hotspot">

  {% comment %}

    - Not really sure what to do with this section
    - Leaving it here for now in case we need it for something

  {% endcomment %}


  {% if section.blocks.size > 0 %}
    <style type="text/css">
      .hotspot {
        position: absolute;
        height: 25px;
        width: 25px;
        padding: 5px;
        transform: translate(-50%, -50%);
        transition: all 350ms cubic-bezier(0.14, 1.17, 1, 1);
        cursor: pointer;
      }

      .hotspot:before {
        content: "";
        display: block;
        height: 14px;
        width: 14px;
        background: white;
        border: 3px solid #000;
        border-radius: 50%;
        box-shadow: 0 0 3px #08080866;
      }

      .hotspot:hover,
      .hotspot:focus {
        transform: translate(-50%, -50%) scale(1.25);
        transition: all 350ms cubic-bezier(0, 0, 0.18, 1.29);
      }

      {% for block in section.blocks %}
        #hotspot-{{ block.id }} {
          top:  {{ block.settings.position_vertical   | append: '%' }};
          left: {{ block.settings.position_horizontal | append: '%' }};
        }
      {% endfor %}
    </style>
  {% endif %}

  <div class="container">
    <div class="u-pos-rel">
      <img src="{{ section.settings.image | img_url: '1600x' }}" style="width: 100%" />

      {% for block in section.blocks %}
        <div id="hotspot-{{ block.id }}" class="hotspot" title="{{ block.settings.title }}">
          {{ block.settings.content }}
        </div>
      {% endfor %}
      
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Hotspot",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Hotspot Image"
      }
    ],
    "blocks": [
      {
        "type": "hotspot",
        "name": "Hotspot",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Title"
          },
          {
            "type": "richtext",
            "id": "content",
            "label": "Content"
          },
          {
            "type": "range",
            "id": "position_vertical",
            "min": 0,
            "max": 100,
            "step": 1,
            "unit": "%",
            "label": "Vertical Position",
            "default": 50
          },
          {
            "type": "range",
            "id": "position_horizontal",
            "min": 0,
            "max": 100,
            "step": 1,
            "unit": "%",
            "label": "Horizontal Position",
            "default": 50
          }
        ]
      }
    ],
    "presets": [
      {
        "category": "Misc",
        "name": "Hotspot"
      }
    ]     
  }
{% endschema %}