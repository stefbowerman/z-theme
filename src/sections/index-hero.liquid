{%- if section.settings.hero_image -%}
  {%- assign background_image = section.settings.hero_image | img_url: '1800x' -%}
{%- else -%}
  {%- assign background_image = 'hero-default.jpg' | asset_img_url: '1800x' -%}
{%- endif -%}

{%- comment %}
@param background_image {string, required} - This a var assigned via section.settings
@param hero_title {string, required} - Top-level heading for hero
@param hero_has_cta {boolean, required} - Toggles visibility of the CTA
@param hero_height {string, required} - Sets the height of the hero, expects `.Hero[--sm][--md][--lg]`
@param hero_classnames {string, optional} - Top-level hero classnames
@param hero_desc {string, optional} - Sub-header copy below the title
@param button_title {string, optional} - CTA button title
@param button_url {string, optional} - CTA button URL
@param shrink_hero_container_width {boolean, optional} - Toggles container width for the title & desc
@param background_overlay {boolean, optional} - Toggles a light background overlay on the image
{% endcomment -%}

{% include 'hero-template',
  hero_title: section.settings.hero_title,
  hero_classnames: 'Hero Hero--hasImageBackground Hero--hasOverlay flex-col flex-1 u-pos-rel u-color-light-grey',
  hero_has_cta: false,
  hero_height: section.settings.hero_height,
  shrink_hero_container_width: true
%}

{% schema %}
  {
    "name": "Hero",
    "class": "Hero",
    "settings": [
      {
        "label": "Background Image",
        "id": "hero_image",
        "type": "image_picker"
      },
      {
        "label": "Hero Title",
        "id": "hero_title",
        "type": "text",
        "info": "The title of your page (updating will overwrite any autofilled title)"
      },
      {
        "label": "Height",
        "id": "hero_height",
        "type": "select",
        "default": "Hero--md",
        "options": [
          {
            "label": "Small",
            "value": "Hero--sm"
          },
          {
            "label": "Medium",
            "value": "Hero--md"
          },
          {
            "label": "Large",
            "value": "Hero--lg"
          }
        ]
      },
      {
        "label": "Background Overlay",
        "id": "background_overlay",
        "type": "checkbox",
        "default": true,
        "info": "Adds a light overlay to your images, for improving legibility"
      },
      {
        "label": "Has CTA",
        "id": "hero_has_cta",
        "type": "checkbox",
        "default": false,
        "info": "If there is is any copy or buttons to accompany the title"
      },
      {
        "label": "CTA Copy",
        "id": "hero_cta_copy",
        "type": "textarea",
        "info": "Copy for the hero subtitle"
      },
      {
        "label": "Restrict Hero Title Container Width",
        "id": "shrink_hero_container_width",
        "type": "checkbox",
        "default": true,
        "info": "Determines if the hero copy container expands at larger breakpoints"
      },
      {
        "label": "Button Title",
        "id": "button_title",
        "type": "text",
        "default": "See More"
      }
    ]
  }
{% endschema %}
