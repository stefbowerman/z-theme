{%- if section.settings.hero_image -%}
  {%- assign background_image = section.settings.hero_image | img_url: '1800x' -%}
{%- comment %}
Uncomment this block once you've uploaded a fallback hero image to your `assets` directory
{%- else -%}
  {%- assign background_image = 'hero-default.jpg' | asset_img_url: '1800x' -%}
{% endcomment -%}
{%- endif -%}

{%- comment %} See `hero-template.liquid` for a full list of params/args {% endcomment -%}
{% include 'hero-template',
  hero_title: section.settings.hero_title,
  hero_height: section.settings.hero_height,
%}

{% schema %}
  {
    "name": "Hero",
    "class": "Hero--index",
    "settings": [
      {
        "label": "Background Image",
        "id": "hero_image",
        "type": "image_picker"
      },
      {
        "label": "Hero Title",
        "id": "hero_title",
        "type": "text",
        "info": "The title of your page (updating will overwrite any autofilled title)",
        "default": "Hero Title"
      },
      {
        "label": "Height",
        "id": "hero_height",
        "type": "select",
        "default": "Hero--md",
        "options": [
          {
            "label": "Small",
            "value": "Hero--sm"
          },
          {
            "label": "Medium",
            "value": "Hero--md"
          },
          {
            "label": "Large",
            "value": "Hero--lg"
          }
        ]
      },
      {
        "label": "Background Overlay",
        "id": "background_overlay",
        "type": "checkbox",
        "default": true,
        "info": "Adds a light overlay to your images, for improving legibility"
      },
      {
        "label": "Has CTA",
        "id": "hero_has_cta",
        "type": "checkbox",
        "default": false,
        "info": "If there is is any copy or buttons to accompany the title"
      },
      {
        "label": "CTA Copy",
        "id": "hero_cta_copy",
        "type": "textarea",
        "info": "Copy for the hero subtitle"
      },
      {
        "label": "Restrict Hero Title Container Width",
        "id": "shrink_hero_container_width",
        "type": "checkbox",
        "default": true,
        "info": "Determines if the hero copy container expands at larger breakpoints"
      },
      {
        "label": "Button Title",
        "id": "button_title",
        "type": "text",
        "default": "See More"
      }
    ]
  }
{% endschema %}
