{% include 'page-cms-section-renderer', section: section %}

{% schema %}
  {
    "name": "Page - CMS",
    "settings": [
      {
        "type": "header",
        "content": "Page Hero - Content"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "Page Title"
      },
      {
        "type": "text",
        "id": "subtitle",
        "label": "Subtitle",
        "default": "Page Subtitle"
      },
      {
        "type": "text",
        "id": "cta_text",
        "label": "CTA Text"
      },
      {
        "type": "url",
        "id": "cta_url",
        "label": "CTA Link"
      },
      {
        "type": "header",
        "content": "Page Hero - Design"
      },
      {
        "type": "checkbox",
        "id" : "content_light_text",
        "label": "Light Text",
        "default": false
      },
      {
        "type": "range",
        "id":   "content_max_width",
        "min":  300,
        "max":  850,
        "step": 25,
        "unit": "px",
        "label": "Max Content Width",
        "default": 450
      },      
      {
        "type":      "select",
        "id":        "content_alignment",
        "label":     "Content Alignment",
        "options": [
          { "value": "left", "label": "Left" },
          { "value": "center", "label": "Center" },
          { "value": "right", "label": "Right" }
        ],
        "default":   "center"
      },
      {
        "type": "image_picker",
        "id": "background_image",
        "label": "Background Image"
      },
      {
        "type": "image_picker",
        "id": "background_image_small",
        "label": "Background Image - Small Screens"
      }
    ],
    "blocks": [
      {
        "type": "article_grid",
        "name": "Article Grid",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Title"
          },
          {
             "type": "article",
             "id": "article_1",
             "label": "Article 1"
          },
          {
             "type": "article",
             "id": "article_2",
             "label": "Article 2"
          },
          {
             "type": "article",
             "id": "article_3",
             "label": "Article 3"
          },
          {
            "type": "text",
            "id": "cta_text",
            "label": "CTA Text"
          },
          {
            "type": "url",
            "id": "cta_url",
            "label": "CTA Link"
          }
        ]
      },   
      {
        "type": "product_grid",
        "name": "Product Grid",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Title"
          },        
          {
            "type": "product",
            "id": "product_1",
            "label": "Product 1"
          },
          {
            "type": "product",
            "id": "product_2",
            "label": "Product 2"
          },
          {
            "type": "product",
            "id": "product_3",
            "label": "Product 3"
          },
          {
            "type": "text",
            "id": "cta_text",
            "label": "CTA Text"
          },
          {
            "type": "url",
            "id": "cta_url",
            "label": "CTA Link"
          }
        ]
      },
      {
        "type": "banner",
        "name": "Banner",
        "settings": [
          {
            "type": "header",
            "content": "Content"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Title"
          },
          {
            "type": "richtext",
            "id": "text",
            "label": "Text"
          },
          {
            "type": "text",
            "id": "cta_text",
            "label": "CTA Text"
          },
          {
            "type": "url",
            "id": "cta_url",
            "label": "CTA Link"
          },
          {
            "type": "header",
            "content": "Design"
          },
          {
            "type": "range",
            "id":   "content_max_width",
            "min":  300,
            "max":  850,
            "step": 25,
            "unit": "px",
            "label": "Max Content Width",
            "default": 450
          },
          {
            "type": "checkbox",
            "id" : "light_text",
            "label": "Light Text",
            "default": false
          },
          {
            "type":      "select",
            "id":        "content_alignment",
            "label":     "Content Alignment",
            "options": [
              { "value": "left", "label": "Left" },
              { "value": "center", "label": "Center" },
              { "value": "right", "label": "Right" }
            ],
            "default":   "center"
          },
          {
            "type":      "select",
            "id":        "text_alignment",
            "label":     "Text Alignment",
            "options": [
              { "value": "left", "label": "Left" },
              { "value": "center", "label": "Center" },
              { "value": "right", "label": "Right" }
            ],
            "default":   "center"
          },
          {
            "type": "image_picker",
            "id": "background",
            "label": "Background Image"
          },
          {
            "type": "image_picker",
            "id": "background_image_small",
            "label": "Background Image - Mobile"
          }
        ]
      },
      {
        "type": "promo",
        "name": "Promo",
        "settings": [
          {
            "type": "select",
            "id": "layout",
            "label": "Layout",
            "options": [
              { "value": "left", "label": "Image Left" },
              { "value": "right", "label": "Image Right" }
            ],
            "default": "left"
          },
          {
            "type": "select",
            "id": "type",
            "label": "Content Split",
            "options": [
              { "value": "1", "label": "4/8" },
              { "value": "2", "label": "5/7" },
              { "value": "3", "label": "6/6" },
              { "value": "4", "label": "7/5" },
