          {
            "type": "range",
            "id":   "content_max_width",
            "min":  300,
            "max":  850,
            "step": 25,
            "unit": "px",
            "label": "Max Content Width",
            "default": 450
          },
          {
            "type": "text",
            "id": "cta_text",
            "label": "CTA Text"
          },
          {
            "type": "url",
            "id": "cta_url",
            "label": "CTA Link"
          },     
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "image_picker",
            "id": "image_small",
            "label": "Image - Mobile"
          }  
        ]  
      },
      {
        "type": "richtext",
        "name": "Richtext",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Title"
          },
          {
            "type": "richtext",
            "id": "content",
            "label": "Content"
          },
          {
            "type": "range",
            "id":   "content_max_width",
            "min":  300,
            "max":  850,
            "step": 25,
            "unit": "px",
            "label": "Max Content Width",
            "default": 450
          },
          {
            "type":      "select",
            "id":        "content_alignment",
            "label":     "Content Alignment",
            "options": [
              { "value": "left", "label": "Left" },
              { "value": "center", "label": "Center" },
              { "value": "right", "label": "Right" }
            ],
            "default":   "center"
          },
          {
            "type":      "select",
            "id":        "text_alignment",
            "label":     "Text Alignment",
            "options": [
              { "value": "left", "label": "Left" },
              { "value": "center", "label": "Center" },
              { "value": "right", "label": "Right" }
            ],
            "default":   "center"
          }
        ]
      },
      {
        "type": "video",
        "name": "Video",
        "settings": [
          {
             "id": "video_url",
             "type": "video_url",
             "label": "Video URL",
             "accept": ["vimeo", "youtube"],
             "info": "Both Vimeo and YouTube videos are supported",
             "default": "https://vimeo.com/72223143"
          },
          {
            "type": "image_picker",
            "id": "cover_image",
            "label": "Cover Image"
          },
          {
            "type": "header",
            "content": "Vimeo Embed Options",
            "info": "The options below only apply to Vimeo videos"
          },
          {
            "type": "color",
            "id": "embed_color",
            "label": "Embed Color",
            "default": "#000"
          },          
          {
            "type": "checkbox",
            "id" : "background",
            "label": "Background Video",
            "info": "Enabling this will remove video controls, cover image and autoplay the video.  [See Vimeo Help Page for info](https://help.vimeo.com/hc/en-us/articles/115011183028-Embedding-background-videos)",
            "default": false
          }
        ]
      }
