{% assign title = 'customer.reset_password.title' | t %}
{% assign subtitle = 'customer.reset_password.subtext' | t: email: email %}

<div class="layout-content-wrapper" data-section-id="{{ section.id }}" data-section-type="customers-reset-password">
  <div class="container">
    
    {% include 'page-header', title: title, subtitle: subtitle %}

    <div class="row justify-content-center">

      <div class="col-sm-6">
        {% form 'reset_customer_password' %}
          {{ form.errors | default_errors }}

          <div class="form-group">
            <label for="ResetPassword">
              {{ 'customer.reset_password.password' | t }}
            </label>
            <input type="password"
              name="customer[password]"
              id="ResetPassword"
              class="form-control {% if form.errors contains 'password' %}is-invalid{% endif %}"
              placeholder="{{ 'customer.reset_password.password' | t }}">
          </div>

          <div class="form-group">
            <label for="PasswordConfirmation">
              {{ 'customer.reset_password.password_confirm' | t }}
            </label>
            <input type="password"
              name="customer[password_confirmation]"
              id="PasswordConfirmation"
              class="form-control {% if form.errors contains 'password_confirmation' %}is-invalid{% endif %}"
              placeholder="{{ 'customer.reset_password.password_confirm' | t }}">
          </div>

          <div class="form-group">
            <input type="submit" class="btn btn-primary" value="{{ 'customer.reset_password.submit' | t }}">
          </div>

        {% endform %}
      </div>

    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Customers - Reset Pass",
    "settings": []
  }
{% endschema %}
