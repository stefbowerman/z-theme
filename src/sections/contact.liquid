<div class="layout-content-wrapper">
  <div class="container">
    
    <div class="page-header">
      <h1 class="page-header__title">{{ section.settings.title }}</h1>
    </div>

    <div style="max-width: 680px; margin-left: auto; margin-right: auto;">
      
      {% if section.settings.sub_title != blank %}
        <h5 class="u-ta-center">{{ section.settings.sub_title }}</h5>
      {% endif %}

      <div class="rte u-ta-center">
        {{ section.settings.content }}
      </div>

      <br /><br />

      <div class="form-horizontal"> {% comment %} Can't add classes directly to shopify forms {% endcomment %}
        {% form 'contact' %}

          {% if form.posted_successfully? %}
            <div class="alert alert-success">
              {% if section.settings.success_message != blank %}
                {{ section.settings.success_message }}
              {% else %}
                {{ 'contact.form.post_success' | t }}
              {% endif %}
            </div>
          {% endif %}

          {% if form.errors %}
            <div class="alert alert-danger">
              {{ form.errors | default_errors }}
            </div>
          {% endif %}

          <div class="form-group">
            <label for="ContactFormName" class="col-sm-2 control-label">{{ 'contact.form.name' | t }}</label>
            <div class="col-sm-10">
              <input type="text"
                name="contact[name]"
                id="ContactFormName"
                class="form-control"
                placeholder="{{ 'contact.form.name' | t }}"
                value="{% if form[name] %}{{ form[name] }}{% elsif customer %}{{ customer.name }}{% endif %}">
            </div>
          </div>

          <div class="form-group">
            <label for="ContactFormEmail" class="col-sm-2 control-label">{{ 'contact.form.email' | t }}</label>
            <div class="col-sm-10">
              <input type="email"
                name="contact[email]"
                id="ContactFormEmail"
                class="form-control"
                placeholder="{{ 'contact.form.email' | t }}"
                value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}"
                spellcheck="false"
                autocomplete="off"
                autocapitalize="off">
            </div>
          </div>

          <div class="form-group">
            <label for="ContactFormPhone" class="col-sm-2 control-label">{{ 'contact.form.phone' | t }}</label>
            <div class="col-sm-10">
              <input type="tel"
                name="contact[phone]"
                id="ContactFormPhone"
                class="form-control"
                placeholder="{{ 'contact.form.phone' | t }}"
                value="{% if form[phone] %}{{ form[phone] }}{% elsif customer %}{{ customer.phone }}{% endif %}"
                pattern="[0-9\-]*">
            </div>
          </div>

          <div class="form-group">
            <label for="ContactFormMessage" class="col-sm-2 control-label">{{ 'contact.form.message' | t }}</label>
            <div class="col-sm-10">
              <textarea rows="10"
                name="contact[body]"
                id="ContactFormMessage"
                class="form-control"
                placeholder="{{ 'contact.form.message' | t }}">
                {% if form.body %}
                  {{ form.body }}
                {% endif %}
              </textarea>
            </div>
          </div>

          <div class="u-ta-right">
            <input type="submit" class="btn btn-primary" value="{{ 'contact.form.send' | t }}">
          </div>

        {% endform %}
      </div>
    </div>

  </div>
</div>

{% schema %}
  {
    "name": "Contact Page",
    "settings": [
      {
        "id": "title",
        "type": "text",
        "label": "Title",
        "default": "Contact Us"
      },
      {
        "id": "sub_title",
        "type": "text",
        "label": "Subtitle",
        "default": "Need online order support?"
      },
      {
        "id": "content",
        "type": "richtext",
        "label": "Content"
      },
      {
        "id": "success_message",
        "type": "text",
        "label": "Success Message",
        "info": "Displays when someone submits the form successfully"
      }
    ]
  }
{% endschema %}