<div data-section-id="{{ section.id }}" data-section-type="pencil-banner">
  {% if section.settings.toggle_banner %}
    <div class="PencilBanner">
      <div class="container">
        {% if section.settings.banner_link  %}
          <a href="{{ section.settings.banner_link }}" class=""{% if section.settings.banner_link_external %}target="_blank"{% endif %}>{{ section.settings.banner_text }}</a>
        {% else %}
          <span class="">{{ section.settings.banner_text }}</span>
        {% endif %}
        <a href="#" class="PencilBanner js-PencilBanner-close">&times;</a>
      </div>
    </div>
  {% endif %}
</div>

{% schema %}
  {
    "name": "Pencil Banner",
    "settings": [
      {
        "id": "toggle_banner",
        "type": "checkbox",
        "label": "Show Pencil Banner",
        "default": false
      },
      {
        "id": "banner_text",
        "type": "text",
        "label": "Pencil Banner Text",
        "default": "Default Banner Text"
      },
      {
        "id": "banner_link",
        "type": "url",
        "label": "Should the banner link anywhere?"
      },
      {
        "id": "banner_link_external",
        "type": "checkbox",
        "label": "Open Link in New Window",
        "default": false
      }
    ]
  }
{% endschema %}
