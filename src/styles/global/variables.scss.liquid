//== Transitions
//
//## Keep all transition functions / durations as variables for consistency.

$transition-duration-none:    0s;
$transition-duration-fastest: 0.05s;
$transition-duration-fast:    0.15s;
$transition-duration-base:    0.3s;
$transition-duration-slow:    0.6s;

 /*
  *  Names are a little confusing but - 
  *  $transition-timing-function-in should be used on the `active` state that you're transitioning *to*
  *  $transition-timing-function-out should be used on the `active` state that you're transitioning *from*
  *
  *  Usage - 
  *  .element {
  *     transition: all $transition-timing-function-out;
  *     &:hover,
  *     &:focus {
  *      transition: all $transition-timing-function-in;
  *     }
  *   }
  *
  */

$transition-timing-function-base:         ease-in-out;
$transition-timing-function-in:           ease-out;
$transition-timing-function-out:          ease-in;
$transition-timing-function-in-out-ui:    cubic-bezier(0.42, 0, 0.13, 1.04);
$transition-timing-function-hard-in:      cubic-bezier(0, 0, 0, 1);
$transition-timing-function-hard-out:     cubic-bezier(1, 0, 1, 1);

// Header + dropdowns
$transition-duration-dropdown:            $transition-duration-base;
$transition-timing-function-dropdown-in:  $transition-timing-function-in;
$transition-timing-function-dropdown-out: $transition-timing-function-out;

// slide - (ajaxcart / mobile menu / slideup)
$transition-duration-slide:               $transition-duration-slow;
$transition-timing-function-slide-in:     cubic-bezier(0.13, 0.58, 0.15, 0.95);
$transition-timing-function-slide-out:    cubic-bezier(0, 0.6, 0.21, 0.85);

$transition-duration-overlay:             $transition-duration-slow;
$transition-timing-function-overlay-in:   cubic-bezier(0, 0, 0.23, 1.43);
$transition-timing-function-overlay-out:  $transition-timing-function-out;
$transition-timing-function-overlay-opacity-in: $transition-timing-function-hard-in;
$transition-timing-function-overlay-opacity-out: $transition-timing-function-hard-out;

