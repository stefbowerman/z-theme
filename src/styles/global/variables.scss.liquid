/*================ Typography Variables ================*/

$font-family-sans-serif:    "Futura", -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol" !default;
$font-family-monospace:     "SFMono-Regular", Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace !default;
$font-family-base:          $font-family-sans-serif !default;

$font-size-base:            1rem !default; // set to `16px`
$font-size-large:           $font-size-base * 1.25;
$font-size-medium:          $font-size-base * 1.125;
$font-size-small:           $font-size-base * 0.875;
$font-size-xsmall:          $font-size-base * 0.75;
$font-size-h1:              $font-size-base * 2.5;
$font-size-h2:              $font-size-base * 2;
$font-size-h3:              $font-size-base * 1.75;
$font-size-h4:              $font-size-base * 1.5;
$font-size-h5:              $font-size-base * 1.25;
$font-size-h6:              $font-size-base;
$font-size-p1:              $font-size-base * 1.5;
$font-size-p2:              $font-size-base;
$font-size-p3:              $font-size-small;

$font-weight-normal:        400;
$font-weight-medium:        500;
$font-weight-bold:          700;
$font-weight-base:          $font-weight-normal !default;
$font-weight-p1:            $font-weight-normal;
$font-weight-p2:            $font-weight-normal;
$font-weight-p3:            $font-weight-normal;

$letter-spacing-base:       0.015em;
$letter-spacing-h1:         0em;
$letter-spacing-h2:         0em;
$letter-spacing-h3:         0em;
$letter-spacing-h4:         0em;
$letter-spacing-h5:         0em;
$letter-spacing-h6:         0em;
$letter-spacing-p1:         0em;
$letter-spacing-p2:         0em;
$letter-spacing-p3:         0em;

$line-height-base:          1.5; //** Unit-less `line-height` for use in components like buttons.
$line-height-computed:      $font-size-base * $line-height-base !default; //** Computed "line-height" (`font-size` * `line-height`) for use with `margin`, `padding`, etc.
$line-height-h1:            1.2;
$line-height-h2:            1.2;
$line-height-h3:            1.2;
$line-height-h4:            1.2;
$line-height-h5:            1.2;
$line-height-h6:            1.2;
$line-height-p1:            1.4;
$line-height-p2:            1.4;
$line-height-p3:            1.4;

//** By default, this inherits from the `<body>`.
$headings-font-family:      inherit !default;
$headings-font-weight:      $font-weight-bold !default;
$headings-color:            $color-black !default;
$headings-text-transform:   none;
$headings-margin-bottom:    1rem;

$link-color:                $color-black !default;
$link-decoration:           none !default;
$link-hover-color:          lighten($link-color, 9%) !default;
$link-hover-decoration:     none !default;

/*================ Spacing Variables ================*/
$spacer:                    1rem;
$headings-margin-bottom:    $spacer * 1.5;
$paragraph-margin-bottom:   0.8rem; // Paragraphs (styles the p element)

//== Components
//
//## Define common padding and border radius sizes and more.

$padding-base-vertical:     0.375rem;
$padding-base-horizontal:   0.75rem;

$padding-large-vertical:    0.625rem;
$padding-large-horizontal:  1rem;

$padding-small-vertical:    0.3125rem;
$padding-small-horizontal:  0.625rem;

$padding-xs-vertical:       0.0625rem;
$padding-xs-horizontal:     0.3125rem;

$line-height-large:         1.3333333; // extra decimals for Win 8.1 Chrome
$line-height-small:         1.5;

$border-radius-base:        4px;
$border-radius-large:       6px;
$border-radius-small:       3px;

//== Tables
//
//## Customizes the `.table` component with basic values, each used across all table variations.

$table-cell-padding:            .75rem !default;
$table-condensed-cell-padding:  .3rem !default;
$table-font-size:               $font-size-base;

$table-bg:                      transparent !default;
$table-bg-accent:               #f9f9f9 !default; //** Background color used for `.table-striped`.
$table-bg-hover:                #f5f5f5 !default; //** Background color used for `.table-hover`.
$table-bg-active:               $table-bg-hover !default;

//** Border color for table and cell borders.
$table-border-color:            #ddd !default;

//== Buttons
//
//## For each of Bootstrap's buttons, define text, background and border color.

$btn-font-weight:                $font-weight-bold !default;

$btn-default-color:              $color-black !default;
$btn-default-bg:                 $color-white !default;
$btn-default-border:             $color-black !default;
$btn-default-hover-color:        $color-black !default;
$btn-default-hover-bg:           darken($color-white, 9%) !default;
$btn-default-hover-border:       $color-black !default;

$btn-primary-color:              $color-white !default;
$btn-primary-bg:                 $color-primary !default;
$btn-primary-border:             $color-primary !default;
$btn-primary-hover-color:        $color-white !default;
$btn-primary-hover-bg:           darken($color-primary, 9%) !default;
$btn-primary-hover-border:       $color-primary !default;

$btn-secondary-color:            $color-white !default;
$btn-secondary-bg:               $color-black !default;
$btn-secondary-border:           $color-black !default;
$btn-secondary-hover-color:      $color-black !default;
$btn-secondary-hover-bg:         $color-white !default;
$btn-secondary-hover-border:     $color-black !default;

$btn-link-disabled-color:        $color-grey !default;

// Allows for customizing button radius independently from global border radius
$btn-border-radius-base:         0 !default;
$btn-border-radius-large:        0 !default;
$btn-border-radius-small:        0 !default;

$btn-padding-base-vertical:      0.75rem !default;
$btn-padding-base-horizontal:    3rem !default;

/*================ Forms ================*/

//** `<input>` background color
$input-bg:                       #fff !default;
//** `<input disabled>` background color
$input-bg-disabled:              $color-white !default;

//** Text color for `<input>`s
$input-color:                    $color-black !default;
//** Text color for `<input>`s when focused
$input-focus-color:              $color-black;
//** `<input>` border color
$input-border:                   $color-grey !default;

//** Default `.form-control` border radius
// This has no effect on `<select>`s in some browsers, due to the limited stylability of `<select>`s in CSS.
$input-border-radius:            0 !default;
//** Large `.form-control` border radius
$input-border-radius-large:      0 !default;
//** Small `.form-control` border radius
$input-border-radius-small:      0 !default;

//** Border color for inputs on focus
$input-border-focus:             $color-black !default;

//** Placeholder text color
$input-color-placeholder:        $color-grey !default;

//** Default `.form-control` height
$input-height-base:              2.8rem; // ($line-height-computed + ($padding-base-vertical * 2) + 2) !default;
//** Large `.form-control` height
$input-height-large:             (($font-size-large * $line-height-large) + ($padding-large-vertical * 2) + 2) !default;
//** Small `.form-control` height
$input-height-small:             (($font-size-small * $line-height-small) + ($padding-small-vertical * 2) + 2) !default;

//** `.form-group` margin
$form-group-margin-bottom:       15px !default;

$legend-color:                   $color-grey !default;
$legend-border-color:            #e5e5e5 !default;

//** Background color for textual input addons
$input-group-addon-bg:           $color-white !default;
//** Border color for textual input addons
$input-group-addon-border-color: $input-border !default;

$label-font-size:                $font-size-small;
$label-font-weight:              bold;
$label-text-transform:           uppercase;

//** Disabled cursor for form controls and buttons.
$cursor-disabled:                not-allowed !default;

//== Alerts
$alert-padding-y:                10px;
$alert-padding-x:                20px;
$alert-margin-bottom:            $spacer;
$alert-border-width:             1px;

$alert-success-bg:               #e1f7e1;
$alert-success-border:           #DAF0DA;
$alert-success-text:             $text-color;

$alert-danger-bg:                #f7e5e1;
$alert-danger-border:            #f0ddda;
$alert-danger-text:              $text-color;

$alert-info-bg:                  #d9edf7;
$alert-info-border:              darken(adjust-hue(#d9edf7, -10), 7%);
$alert-info-text:                $text-color;

/*================ Media Query Breakpoints ================*/
//** Deprecated `$screen-xs-min` as of v3.2.0
$screen-xs-min:              576px; // 480px !default;
// Small screen / tablet
$screen-sm-min:              768px !default;
// Medium screen / desktop
$screen-md-min:              992px !default;
// Large screen / wide desktop
$screen-lg-min:              1200px !default;
// Widescreen
$screen-xl-min:              1480px !default;

// So media queries don't overlap when required, provide a maximum
$screen-xs-max:              ($screen-sm-min - 1) !default;
$screen-sm-max:              ($screen-md-min - 1) !default;
$screen-md-max:              ($screen-lg-min - 1) !default;
$screen-lg-max:              ($screen-xl-min - 1) !default;

/*================ Bootstrap Grid ================*/

$grid-columns:               12 !default;
$grid-gutter-width:          30px !default; //** Padding between columns. Gets divided in half for the left and right.

// Navbar collapse

//** Point at which the navbar becomes uncollapsed.
$grid-float-breakpoint:      $screen-sm-min !default;
//** Point at which the navbar begins collapsing.
$grid-float-breakpoint-max:  $screen-xs-max !default;


/*================ Bootstrap Container Sizes ================*/

//## Define the maximum width of `.container` for different screen sizes.

// Small screen / tablet
$container-tablet:             (720px + $grid-gutter-width) !default;
//** For `$screen-sm-min` and up.
$container-sm:                 $container-tablet !default;

// Medium screen / desktop
$container-desktop:            (940px + $grid-gutter-width) !default;
//** For `$screen-md-min` and up.
$container-md:                 $container-desktop !default;

// Large screen
$container-large:              (1140px + $grid-gutter-width) !default;
//** For `$screen-lg-min` and up.
$container-lg:                 $container-large !default;

// X-Large screen / widescreen
$container-xlarge:             $screen-xl-min - $grid-gutter-width; // (1140px + $grid-gutter-width) !default;
//** For `$screen-xl-min` and up.
$container-xl:                 $container-xlarge !default;


