
/*================ Brand Variables ================*/

$color-red: #ee383d;
$color-green: #06A12F;
$color-grey: #d9d9d6;
$color-icon-check: #c5c5c5;
$color-labelGrey: #a5a5a5;
$color-lightBorderGrey: #eaeaea;
$color-quantityBorderGrey: #dbdbdb;
$color-lightGrey: #f9f9f9;
$color-white: #fff;
$color-cloudy: #eee;
$color-darkGrey: #404040;
$color-warmGrey: #7f7f7f;
$color-starDust: #808080;
$color-dustyGrey: #9B9B9B;
